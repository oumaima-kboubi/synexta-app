{% extends 'base.html.twig' %}

{% block title %}Edit Your Profile{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7Rxnatzjc@dSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <style>
        .pageStyle {
            background-image: url('{{ asset('assets/img/bg3.jpg') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10%;
        }

        .formStyle {
            background-color: rgba(255, 255, 255, 0.6);
            padding: 20px;
            border-radius: 10px;
            max-width: 700px;
            margin-left:20%;
        }
        .scrollable-table {
            max-height: 400px; 
            overflow-y: auto;
        }
         .logout-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .list-button {
            margin-left:40%;
            margin-top:20px;
            margin-bottom:10px
        }
         .category-button {
            margin-left:75%;
            margin-top:20px;
            margin-bottom:10px
        }
          .logout-button {
            position: absolute;
            top: 10px;
            right: 10px;
        }
          .edit-button {
            position: absolute;
            top: 10px;
            right: 100px;
        }
    </style>
{% endblock %}

{% block body %}
<body class="pageStyle">
<div class="formStyle">
  <div class="mb-3">
        <p><a href="{{ path('app_logout') }}" class="btn btn-danger logout-button">Logout</a></p>
          <p><a href="{{ path('product_show_all') }}" class="btn btn-info edit-button">Show all products</a></p>
    </div>
    <h1>Edit Your Profile</h1>
   {{ form_start(edit_user_form) }}
          
            <div class="mb-3">
                {{ form_row(edit_user_form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
              <div class="mb-3">
                {{ form_row(edit_user_form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
       
            <div class="mb-3">
                {{ form_row(edit_user_form.Submit, {'attr': {'class': 'btn btn-primary btn-block','style':'margin-left: 40%; margin-down:10px'}}) }}
            </div>

    {{ form_end(edit_user_form) }} 
          
    {# {{ form(edit_user_form) }} #}
    </div>
</body>
{% endblock %}
